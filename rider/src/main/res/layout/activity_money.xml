<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MoneyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_money_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="＜"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_money_mingxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="账户明细"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:textColor="#FF333333"
            android:layout_marginRight="@dimen/dp_22"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_money_table_corners"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/my_money_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 25255.00"
            android:textColor="#FFEF2635"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_35"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            />
        <Button
            android:id="@+id/my_money_button"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_37"
            android:background="@drawable/shape_mainactivity_button"
            android:text="提现"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_marginBottom="@dimen/dp_25"/>
        
    </LinearLayout>


</LinearLayout>