<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetUpActivity"
    android:background="#F8F8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_order_all_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="头像"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_toLeftOf="@+id/set_b_up_touxiang"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            app:roundedCornerRadius="@dimen/dp_80"
            app:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/set_b_up_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_12"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/set_b_up_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小七"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_12"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性别"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/set_b_up_sex"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="女"
            android:textSize="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/set_b_up_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_12"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/set_b_up_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="183****9627"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_12"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="密码修改"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_12"/>
    </RelativeLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="绑定支付宝"
            android:gravity="center"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/dp_20"/>
    </RelativeLayout>-->
    
    <TextView
        android:id="@+id/my_set_up_TuiChu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="退出登录"
        android:textSize="@dimen/dp_15"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        />

</LinearLayout>