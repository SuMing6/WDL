<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LogingActivity">

    <RelativeLayout
        android:id="@+id/loging_tou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_30">
        <TextView
            android:id="@+id/my_login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="×"
            android:textSize="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_14"
            android:gravity="center"/>
        <TextView
            android:id="@+id/my_login_reg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:text="注册"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/loging_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录"
        android:textColor="#333333"
        android:textSize="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/loging_tou"
        android:layout_marginTop="@dimen/dp_90"
        />
    <LinearLayout
        android:id="@+id/loging_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_below="@+id/loging_text">
        <EditText
            android:id="@+id/loging_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:text="15238633201"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/my_login_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loging_top"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">
        <EditText
            android:id="@+id/loging_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            />
        <TextView
            android:id="@+id/loging_getyzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_11"
            android:textColor="#F2530F"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/loging_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_login_RelativeLayout"
        android:text="密码登录"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"/>
    <Button
        android:id="@+id/loging_login"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_loging_button"
        android:layout_below="@+id/my_login_RelativeLayout"
        android:layout_marginTop="@dimen/dp_80"
        android:textColor="#fff"
        />

</RelativeLayout>