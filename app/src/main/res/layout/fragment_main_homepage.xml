<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:background="#ffff"
        android:paddingTop="@dimen/dp_35"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/homepage_SYS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"/>
        <TextView
            android:id="@+id/homepage_SYSj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结果"/>
        <EditText
            android:id="@+id/homepage_EditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="请输入关键词"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="#999999"
            android:background="@drawable/shape_homepage_editrext"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_20"
            />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/homepage_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">
        <LinearLayout
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.youth.banner.Banner
                android:id="@+id/homepage_Banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_158"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:background="#fff"></com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:background="#F7F7F7"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_1"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/homepage_ImageView_one"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@mipmap/table_homepage_page_one"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日上新"
                        android:layout_below="@id/homepage_ImageView_one"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/homepage_ImageView_two"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@mipmap/table_homepage_page_two"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特价专区"
                        android:layout_below="@id/homepage_ImageView_two"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/homepage_ImageView_three"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@mipmap/table_homepage_page_three"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精品推荐"
                        android:layout_below="@id/homepage_ImageView_three"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/homepage_ImageView_four"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@mipmap/table_homepage_page_four"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名品配饰"
                        android:layout_below="@id/homepage_ImageView_four"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/homepage_ImageView_five"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@mipmap/table_homepage_page_five"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分兑换"
                        android:layout_below="@id/homepage_ImageView_five"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_homepage_goods_info_bj"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                >
                <TextView
                    android:id="@+id/table_homepage_page_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时抢购"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:textSize="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="限时好价"
                    android:textSize="6pt"
                    android:textColor="#fff"
                    android:layout_toRightOf="@+id/table_homepage_page_jifen"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/shape_homepage_goods_info_timew"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homepage_jifen_XRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_homepage_goods_info_bj"
                    android:layout_below="@+id/table_homepage_page_jifen"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_14"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7">
                <TextView
                    android:id="@+id/table_homepage_page_tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特卖精选"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:textSize="8pt"/>
                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/homepage_recommend_XRecyclerView"
                    android:layout_below="@+id/table_homepage_page_tuijian"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"></com.jcodecraeer.xrecyclerview.XRecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
