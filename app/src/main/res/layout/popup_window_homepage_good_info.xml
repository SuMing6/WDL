<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/RelativeLayout_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <com.youth.banner.Banner
            android:id="@+id/Homepage_goods_info_ImageView"
            android:layout_width="@dimen/dp_121"
            android:layout_height="@dimen/dp_121"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:id="@+id/Homepage_goods_info_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Homepage_goods_info_ImageView"
            android:text="姓名"
            android:textColor="#FF585E"

            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/Homepage_goods_info_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Homepage_goods_info_ImageView"
            android:layout_below="@+id/Homepage_goods_info_name1"
            android:text="现价"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#999"
            android:textSize="@dimen/dp_11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textSize="@dimen/dp_13"
            android:layout_below="@+id/Homepage_goods_info_ImageView"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="#999999"/>
        <LinearLayout
            android:id="@+id/Homepage_goods_info_LinearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Homepage_goods_info_ImageView"
            android:layout_marginTop="@dimen/dp_50">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="@dimen/dp_13"
            android:layout_below="@+id/Homepage_goods_info_LinearLayout11"
            android:layout_marginTop="@dimen/dp_27"/>
        <TextView
            android:id="@+id/Homepage_goods_info_jian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toLeftOf="@id/Homepage_goods_info_num1"
            android:layout_below="@id/Homepage_goods_info_LinearLayout11"
            android:layout_marginTop="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_18"
            android:background="@drawable/shape_homepage_goods_info_textview"
            />
        <EditText
            android:id="@+id/Homepage_goods_info_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toLeftOf="@id/Homepage_goods_info_jia1"
            android:layout_below="@id/Homepage_goods_info_LinearLayout11"
            android:layout_marginTop="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_18"
            android:focusable="false"
            android:background="@drawable/shape_homepage_goods_info_textview"/>
        <TextView
            android:id="@+id/Homepage_goods_info_jia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_below="@id/Homepage_goods_info_LinearLayout11"
            android:layout_marginTop="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_18"
            android:background="@drawable/shape_homepage_goods_info_textview"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_weight="6">
                <TextView
                    android:id="@+id/Homepage_goods_info_bay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_17"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="立即购买"
                    android:background="#4CD3D6"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>