<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="编辑"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:layout_weight="9">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/Shopping_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FAFAFA">
        <TextView
            android:id="@+id/shopping_js"
            android:layout_width="@dimen/dp_110"
            android:layout_height="match_parent"
            android:text="结算"
            android:gravity="center"
            android:background="#F2530F"
            android:layout_alignParentRight="true"
            android:textColor="#fff"/>
        <TextView
            android:layout_toLeftOf="@+id/shopping_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="总计: "
            android:textColor="#333"/>
        <TextView
            android:id="@+id/shopping_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" ￥ 99.00"
            android:textColor="#F2530F"
            android:textSize="@dimen/dp_18"
            android:layout_toLeftOf="@id/shopping_js"
            android:layout_marginRight="@dimen/dp_14"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全选"
            android:layout_marginLeft="@dimen/dp_14"/>
    </RelativeLayout>

</LinearLayout>