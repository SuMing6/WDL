<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Shopping_car_Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/Shopping_car_SimpleDraweeView"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/Shopping_car_Radio"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Shopping_car_SimpleDraweeView">
                <TextView
                    android:id="@+id/Shopping_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#333333"
                    />
                <TextView
                    android:id="@+id/Shopping_car_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Shopping_car_name"
                    android:text="规格"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/Shopping_car_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥99.00"
                    android:layout_below="@+id/Shopping_car_guige"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#DF2E24"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/Shopping_car_guige"
                    android:layout_marginTop="@dimen/dp_17"
                    >
                    <TextView
                        android:id="@+id/Shopping_car_jian1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_toLeftOf="@id/Shopping_car_num1"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_3"
                        android:textSize="@dimen/dp_18"
                        android:background="@drawable/shape_homepage_goods_info_textview"
                        />
                    <EditText
                        android:id="@+id/Shopping_car_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_toLeftOf="@id/Shopping_car_jia1"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_3"
                        android:textSize="@dimen/dp_18"
                        android:focusable="false"
                        android:background="@drawable/shape_homepage_goods_info_textview"/>
                    <TextView
                        android:id="@+id/Shopping_car_jia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_14"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_3"
                        android:textSize="@dimen/dp_18"
                        android:background="@drawable/shape_homepage_goods_info_textview"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    
</LinearLayout>