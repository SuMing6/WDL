<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomepageGoodsInfoActivity">

    <ScrollView
        android:id="@+id/Homepage_goods_info_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/Homepage_goods_info_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F9"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/Homepage_goods_info_Banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:baselineAligned="false"></com.youth.banner.Banner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="#fff">

                <TextView
                    android:id="@+id/Homepage_goods_info_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="价格"
                    android:textColor="#ff0011"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:id="@+id/Homepage_goods_info_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_toRightOf="@+id/Homepage_goods_info_shop_price"
                    android:text="原价格"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/Homepage_goods_info_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="收藏"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/Homepage_goods_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Homepage_goods_info_market_price"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_16" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="说明"
                    android:textColor="#999"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_67"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:text="质保3个月"
                    android:textColor="#333"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="#fff">

                <TextView
                    android:id="@+id/Homepage_goods_info_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="规格"
                    android:textColor="#999"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/Homepage_goods_info_spec_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="选择规格 ＞"
                    android:textColor="#333"
                    android:textSize="@dimen/dp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homepage_goods_info_pinlun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#fff">

                <TextView
                    android:id="@+id/homepage_goods_info_kongbai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#4CD3D6"
                    android:text="  " />

                <TextView
                    android:id="@+id/homepage_goods_info_shangpinpingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_toRightOf="@id/homepage_goods_info_kongbai"
                    android:text="商品评价"
                    android:textColor="#333"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/homepage_goods_info_shangpinpingjianum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_toRightOf="@+id/homepage_goods_info_shangpinpingjia"
                    android:text="商品价格"
                    android:textColor="#999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="全部  ＞" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:id="@+id/homepage_goods_info_kongbai2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#4CD3D6"
                    android:text="  " />

                <TextView
                    android:id="@+id/homepage_goods_info_shangpinping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_toRightOf="@id/homepage_goods_info_kongbai2"
                    android:text="商品详情"
                    android:textColor="#333"
                    android:textSize="@dimen/dp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homepage_goods_info_RecyclerView_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/Homepage_goods_info_popup"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_17"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_weight="1"
                android:gravity="center"
                android:text="加入购物车"
                android:background="#333C3C"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/Homepage_goods_info_bay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_17"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即购买"
                android:background="#4CD3D6"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/Homepage_goods_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_18"
            android:background="@drawable/shape_homepage_editrext"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="@dimen/dp_0"
            android:paddingBottom="@dimen/dp_1"
            />
    </RelativeLayout>



</RelativeLayout>