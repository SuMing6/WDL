<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyShouCangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:layout_marginLeft="@dimen/dp_14"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_shoucang_bj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="编辑"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        ></RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_mingxi_bjRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:padding="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_5"/>
        <TextView
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="#fff"
            android:background="#F2530F"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>