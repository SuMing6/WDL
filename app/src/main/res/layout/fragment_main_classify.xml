<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_35">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分类"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#333333"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#FfF">

        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/Classify_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F5F5F9"
            android:layout_weight="3"></android.support.v7.widget.RecyclerView>-->
        <TextView
            android:id="@+id/Classify_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F5F5F9"
            android:padding="@dimen/dp_20"
            android:layout_weight="3"></TextView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/Classify_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_30"
            android:layout_weight="7"></android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>